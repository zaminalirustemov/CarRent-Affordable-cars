@model List<Blog>
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <span class="subheading">Blog</span>
                <h2>Recent Blog</h2>
            </div>
        </div>
        <div class="row d-flex">
            @foreach (Blog blog in Model)
            {
                <div class="col-md-4 d-flex ftco-animate">
                    <div class="blog-entry justify-content-end">
                        <a asp-action="detail" asp-controller="blog" asp-route-id="@blog.Id" class="block-20">
                            <img src="~/uploads/blog/@blog.ImageName" class="img-fluid" alt="">
                        </a>
                        <div class="text pt-4">
                            <div class="meta mb-3">
                                <div><a asp-action="detail" asp-controller="blog" asp-route-id="@blog.Id">@blog.CreatedDate</a></div>
                                <div><a asp-action="detail" asp-controller="blog" asp-route-id="@blog.Id" class="meta-chat"><span class="icon-chat"></span>@blog.BlogComments.Where(x=>x.isDeleted==false).Where(x=>x.isActive==true).Count()</a></div>
                            </div>
                            <h3 class="heading mt-2"><a asp-action="detail" asp-controller="blog" asp-route-id="@blog.Id">@blog.Title</a></h3>
                            <p><a asp-action="detail" asp-controller="blog" asp-route-id="@blog.Id" class="btn btn-primary">Read more</a></p>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</section>
