@model AppUser
<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('../assets/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5" style="margin-bottom: 250px;">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Profile <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">Profile</h1>
            </div>
        </div>
    </div>
</section>

<!-- ======= MakeYouTrip Section ======= -->
<section class="ftco-section ftco-no-pt bg-light">
    <div class="container">
        <div class="row no-gutters">
            <div class="col-md-12 featured-top">
                <div class="row no-gutters">
                    <div class="col-md-12 d-flex align-items-center">
                        <div class="w-100" style="padding:0px">
                            <section>
                                <div class="card mb-3" style="border-radius: .5rem;">
                                    <div class="row g-0">
                                        <div class="col-md-4 gradient-customzr text-center text-white"
                                             style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                                             @if (Model.ImageName is null)
                                            {
                                                <img src="~/assets/images/memperphoto.jpg" alt="Avatar" class="img-fluid my-5  rounded-circle" style="width: 80px;" />
                                            }else
                                            {
                                                <img src="~/uploads/user/@Model.ImageName" alt="Avatar" class="img-fluid my-5  rounded-circle" style="width: 80px;" />
                                            }
                                            <h5>@Model.Fullname</h5>
                                            <p>@Model.UserName</p>
                                            <a asp-action="editprofile" asp-controller="account" style="margin-bottom: 30px;border-radius: 20px;" class="btn btn-primary">Edit Profile</a>
                                            <i class="far fa-edit mb-5"></i>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="card-body p-4">
                                                <h6>Information</h6>
                                                <hr class="mt-0 mb-4">
                                                <div class="row pt-1">
                                                    <div class="col-6 mb-3">
                                                        <h6>Email</h6>
                                                        <p class="text-muted">@Model.Email</p>
                                                    </div>
                                                    <div class="col-6 mb-3">
                                                        <h6>Phone</h6>
                                                        <p class="text-muted">@Model.PhoneNumber</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>