@model AppUser
<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('../assets/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5" style="margin-bottom: 250px;">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Profile <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">Profile</h1>
            </div>
        </div>
    </div>
</section>

<!-- ======= MakeYouTrip Section ======= -->
<section class="ftco-section ftco-no-pt bg-light">
    <div class="container">
        <div class="row no-gutters">
            <div class="col-md-12 featured-top">
                <div class="row no-gutters">
                    <div class="col-md-12 d-flex align-items-center">
                        <div class="w-100" style="padding:0px">
                            <section>
                                <div class="card mb-3" style="border-radius: .5rem;">
                                    <div class="row g-0">
                                        <div class="col-md-4 gradient-customzr text-center text-white"
                                             style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                                            @if (Model.ImageName is null)
                                            {
                                                <img src="~/assets/images/memperphoto.jpg" alt="Avatar" class="img-fluid my-5  rounded-circle" style="width: 80px;" />
                                            }
                                            else
                                            {
                                                <img src="~/uploads/user/@Model.ImageName" alt="Avatar" class="img-fluid my-5  rounded-circle" style="width: 80px;" />
                                            }
                                            <p>@Model.UserName</p>
                                            <i class="far fa-edit mb-5"></i>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="card-body">
                                                <form method="post" enctype="multipart/form-data">
                                                    <div class="form group row">
                                                        <div class="col-sm-3">
                                                            <p class="mb-0">Profil photo</p>
                                                        </div>
                                                        <div class="col-sm-9" style="height:45px">
                                                            <input asp-for="ImageFile" class="form-control" style="max-height:100%" placeholder="ImageFile">
                                                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <hr>
                                                    <div class="form group row">
                                                        <div class="col-sm-3">
                                                            <p class="mb-0">Full Name</p>
                                                        </div>
                                                        <div class="col-sm-9" style="height:45px">
                                                            <input asp-for="Fullname" class="form-control" style="max-height:100%" placeholder="Fullname">
                                                            <span asp-validation-for="Fullname" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <hr>
                                                    
                                                    <hr>
                                                    <div class="form group row">
                                                        <div class="col-sm-3">
                                                            <p class="mb-0">Phone</p>
                                                        </div>
                                                        <div class="col-sm-9" style="height:45px">
                                                            <input asp-for="PhoneNumber" class="form-control" style="max-height:100%" placeholder="PhoneNumber">
                                                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <hr>
                                                    <input type="hidden" asp-for="UserName" />
                                                    <input type="hidden" asp-for="ImageName" />
                                                    <div style="text-align-last:end">
                                                        <a asp-action="profile" asp-controller="account" style="text-align-last: center;border-radius: 30px;width: 100px;" class="btn btn-dark">
                                                            Go Back
                                                        </a>
                                                        <button style="text-align-last: center;border-radius: 30px;width: 100px;" class="btn btn-primary" type="submit">
                                                            Save
                                                        </button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>