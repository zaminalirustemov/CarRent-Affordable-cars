@model QuoteViewModel
<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('../assets/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Quote<i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">Quote</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section ftco-no-pt bg-light" style="padding-bottom:0px">
	<div class="container">
		<div class="row no-gutters">
			<div class="col-md-12	featured-top">
				<div class="row no-gutters">
					<div class="col-md-4 d-flex align-items-center">
					</div>
					<div class="col-md-8 d-flex align-items-center">
						<div class="login-box" style="width:600px">
							<p>Quote as @Model.AppUser.Fullname</p>
							<form method="post">
								<div class="user-box">
									<input asp-for="Quote" required="" >
									<label>Your quote</label>
								</div>
								<input type="hidden" asp-for="AppUser" />
								<center>
									<button type="submit" data-text="Awesome" class="button">
										<span class="actual-text">&nbsp;send&nbsp;</span>
										<span class="hover-text" aria-hidden="true">&nbsp;send&nbsp;</span>
									</button>
								</center>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
</section>

<!-- ======= Testimonial Section ======= -->
@await Component.InvokeAsync("Testimonial",Model.Testimonials)