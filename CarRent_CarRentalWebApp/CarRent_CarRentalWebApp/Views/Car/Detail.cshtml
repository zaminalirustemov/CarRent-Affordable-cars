@model Car


<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('../assets/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Car details <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">Car Details</h1>
            </div>
        </div>
    </div>
</section>


<section class="ftco-section ftco-car-details">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="car-details">

                    <div class="carousel-car owl-carousel">

                        @foreach (var image in Model.CarImages)
                        {
                            <div class="img rounded " style="height:300px">
                                <img style="height: 300px;width: 1100px;" src="~/uploads/car/@image.ImageName" class="img-fluid" alt="">
                            </div>
                        }
                    </div>
                    <div class="text text-center">
                        <span class="subheading">@Model.Brand.Name</span>
                        <h2>@Model.Model</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md d-flex align-self-stretch ftco-animate">
                <div class="media block-6 services">
                    <div class="media-body py-md-4">
                        <div class="d-flex mb-3 align-items-center">
                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-dashboard"></span></div>
                            <div class="text">
                                <h3 class="heading mb-0 pl-3">
                                    Mileage
                                    <span>@Model.Millage</span>
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md d-flex align-self-stretch ftco-animate">
                <div class="media block-6 services">
                    <div class="media-body py-md-4">
                        <div class="d-flex mb-3 align-items-center">
                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-pistons"></span></div>
                            <div class="text">
                                <h3 class="heading mb-0 pl-3">
                                    Transmission
                                    <span>@Model.Transmission</span>
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md d-flex align-self-stretch ftco-animate">
                <div class="media block-6 services">
                    <div class="media-body py-md-4">
                        <div class="d-flex mb-3 align-items-center">
                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-car-seat"></span></div>
                            <div class="text">
                                <h3 class="heading mb-0 pl-3">
                                    Seats
                                    <span>@Model.Seats Adults</span>
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md d-flex align-self-stretch ftco-animate">
                <div class="media block-6 services">
                    <div class="media-body py-md-4">
                        <div class="d-flex mb-3 align-items-center">
                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-backpack"></span></div>
                            <div class="text">
                                <h3 class="heading mb-0 pl-3">
                                    Luggage
                                    <span>@Model.Luggage</span>
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md d-flex align-self-stretch ftco-animate">
                <div class="media block-6 services">
                    <div class="media-body py-md-4">
                        <div class="d-flex mb-3 align-items-center">
                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-diesel"></span></div>
                            <div class="text">
                                <h3 class="heading mb-0 pl-3">
                                    Fuel
                                    <span>@Model.Fuel</span>
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 pills">
                <div class="bd-example bd-example-tabs">
                    <div class="d-flex justify-content-center">
                        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">

                            <li class="nav-item">
                                <a class="nav-link active" id="pills-description-tab" data-toggle="pill" href="#pills-description" role="tab" aria-controls="pills-description" aria-expanded="true">Features</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="pills-manufacturer-tab" data-toggle="pill" href="#pills-manufacturer" role="tab" aria-controls="pills-manufacturer" aria-expanded="true">Description</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="pills-review-tab" data-toggle="pill" href="#pills-review" role="tab" aria-controls="pills-review" aria-expanded="true">Review</a>
                            </li>
                        </ul>
                    </div>

                    <div class="tab-content" id="pills-tabContent">
                        <div class="tab-pane fade show active" id="pills-description" role="tabpanel" aria-labelledby="pills-description-tab">
                            <div class="row">
                                <div class="col-md-4">
                                    <ul class="features">
                                        <li class="@(Model.Airconditions? "check" : "remove")"><span class="ion-ios-@(Model.Airconditions? "checkmark" : "close")"></span>Airconditions</li>
                                        <li class="@(Model.ChildSeat? "check" : "remove")"><span class="ion-ios-@(Model.ChildSeat? "checkmark" : "close")"></span>Child Seat</li>
                                        <li class="@(Model.GPS? "check" : "remove")"><span class="ion-ios-@(Model.GPS? "checkmark" : "close")"></span>GPS</li>
                                        <li class="@(Model.Music? "check" : "remove")"><span class="ion-ios-@(Model.Music? "checkmark" : "close")"></span>Music</li>
                                    </ul>
                                </div>
                                <div class="col-md-4">
                                    <ul class="features">
                                        <li class="@(Model.SeatBelt? "check" : "remove")"><span class="ion-ios-@(Model.SeatBelt? "checkmark" : "close")"></span>Seat Belt</li>
                                        <li class="@(Model.SleepingBed? "check" : "remove")"><span class="ion-ios-@(Model.SleepingBed? "checkmark" : "close")"></span>Sleeping Bed</li>
                                        <li class="@(Model.Bluetooth? "check" : "remove")"><span class="ion-ios-@(Model.Bluetooth? "checkmark" : "close")"></span>Bluetooth</li>
                                        <li class="@(Model.OnboardComputer? "check" : "remove")"><span class="ion-ios-@(Model.OnboardComputer? "checkmark" : "close")"></span>Onboard computer</li>
                                    </ul>
                                </div>
                                <div class="col-md-4">
                                    <ul class="features">
                                        <li class="@(Model.LongTermTrips? "check" : "remove")"><span class="ion-ios-@(Model.LongTermTrips? "checkmark" : "close")"></span>Long Term Trips</li>
                                        <li class="@(Model.CarKit? "check" : "remove")"><span class="ion-ios-@(Model.CarKit? "checkmark" : "close")"></span>Car Kit</li>
                                        <li class="@(Model.RemoteCentralLocking? "check" : "remove")"><span class="ion-ios-@(Model.RemoteCentralLocking? "checkmark" : "close")"></span>Remote central locking</li>
                                        <li class="@(Model.ClimateControl? "check" : "remove")"><span class="ion-ios-@(Model.ClimateControl? "checkmark" : "close")"></span>Climate control</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="tab-pane fade" id="pills-manufacturer" role="tabpanel" aria-labelledby="pills-manufacturer-tab">
                            <p>@Model.Description</p>
                        </div>

                        <div class="tab-pane fade" id="pills-review" role="tabpanel" aria-labelledby="pills-review-tab">
                            <div class="row">
                                <div class="col-md-7">
                                    <h3 class="head">23 Reviews</h3>
