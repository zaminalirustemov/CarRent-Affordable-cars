@model List<Car>

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('../assets/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Cars <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">Choose Your Car</h1>
            </div>
        </div>
    </div>
</section>


<section class="ftco-section bg-light">
    <div class="row">
        <div class="col-md-3" style="padding-left:100px">

            <div class="sidebar-box ftco-animate fadeInUp ftco-animated">
                <div class="categories">
                    <h3>Categories</h3>
                    <li><a href="#">Ferrari <span>(12)</span></a></li>
                    <li><a href="#">Cheverolet <span>(22)</span></a></li>
                    <li><a href="#">Ford <span>(37)</span></a></li>
                    <li><a href="#">Subaru <span>(42)</span></a></li>
                    <li><a href="#">Toyota <span>(14)</span></a></li>
                    <li><a href="#">Mistsubishi <span>(140)</span></a></li>
                </div>
            </div>
        </div>


        <div class="col-md-8">
            <div class="container">
                <div class="row">
                    @foreach (Car car in Model)
                    {
                        <div class="col-md-4">
                            <div class="car-wrap rounded ftco-animate">
                                <div class="img rounded d-flex align-items-end">
                                    <img src="~/uploads/car/@car.CarImages.FirstOrDefault(x=>x.isPoster==true).ImageName" class="img-fluid" alt="">
                                </div>
                                <div class="text">
                                    <h2 class="mb-0"><a href="car-single.html">@car.Model</a></h2>
                                    <div class="d-flex mb-3">
                                        <span class="cat">@car.Brand.Name</span>
                                        <p class="cat" style="margin-left: 20px;">@car.Category.Name</p>
                                        <p class="price ml-auto">$@(car.PricePerDay) <span>/day</span></p>
                                    </div>
                                    <p class="d-flex mb-0 d-block">
                                        <a asp-action="index" asp-controller="checkout" asp-route-id="@car.Id" class="btn btn-primary py-2 mr-1">Book now</a>
                                        <a asp-action="detail" asp-controller="car" asp-route-id="@car.Id" class="btn btn-secondary py-2 ml-1">Details</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="row mt-5">
                    <div class="col text-center">
                        <div class="block-27">
                            <ul>
                                <li><a href="#">&lt;</a></li>
                                <li class="active"><span>1</span></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#">4</a></li>
                                <li><a href="#">5</a></li>
                                <li><a href="#">&gt;</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
