@model Service
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Detail Service</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">Service</li>
                <li class="breadcrumb-item">Table</li>
                <li class="breadcrumb-item active" aria-current="page">Detail</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <form class="forms-sample">

                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Icon</label>
                            <div class="col-sm-9" >
                                <div><img style="width: 70px;background-color: white;border-radius: 10px;" src="~/manage/icon/@(Model.IconKeyword).png" alt="Avatar" class="img-fluid my-5 " /></div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Title</label>
                            <div class="col-sm-9" style="border:outset;padding-top: 5px;padding-bottom: 5px;border-radius: 10px;">
                                <span>@Model.Title</span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Description</label>
                            <div class="col-sm-9" style="border:outset;padding-top: 5px;padding-bottom: 5px;border-radius: 10px;">
                                <span>@Model.Description</span>
                            </div>
                        </div>
                        <button asp-action="index" asp-controller="service" class="btn btn-dark">Go Back</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>