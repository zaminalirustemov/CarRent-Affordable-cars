@model PaginatedList<Brand>
@{
    int count = (Model.ActivePage - 1) * 5;
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Deleted Brand Table </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">

                <li class="breadcrumb-item">Recycle Bin</li>
                <li class="breadcrumb-item">Brand</li>
                <li class="breadcrumb-item active" aria-current="page">Table</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table" >
                            <thead>
                                <tr>
                                    <th>№</th>
                                    <th>ID</th>
                                    <th>Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Brand brand in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@brand.Id</td>
                                        <td>@brand.Name</td>
                                        <td>
                                            <div class="dropdown">
                                                <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuOutlineButton2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> Actions </button>
                                                <div class="dropdown-menu" aria-labelledby="dropdownMenuOutlineButton2" style="">
                                                    <a class="dropdown-item btn btn-warning" asp-action="detail" asp-controller="deletedbrand" asp-route-id="@brand.Id">Detail</a>
                                                    <div class="dropdown-divider"></div>
                                                    <a class="dropdown-item btn btn-primary" asp-action="restore" asp-controller="deletedbrand" asp-route-id="@brand.Id">Restore</a>
                                                    <div class="dropdown-divider"></div>
                                                    <a class="dropdown-item btn btn-danger" asp-action="harddelete" asp-controller="deletedbrand" asp-route-id="@brand.Id">Delete</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            @if (Model.PreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="index" asp-route-page="@(Model.ActivePage-1)">&laquo;</a>
                </li>
            }
            @for (int i = 1; i <= Model.TotalPageCount; i++)
            {
                <li class="page-item @(Model.ActivePage==i? "active" :"")"><a class="page-link" asp-action="index" asp-route-page="@i">@i</a></li>
            }
            @if (Model.NextPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="index" asp-route-page="@(Model.ActivePage+1)">&raquo;</a>
                </li>
            }
        </ul>
    </nav>
</div>