@model List<AboutUs>

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> AboutUs Table </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">AboutUs</li>
                <li class="breadcrumb-item active" aria-current="page">Table</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body" style="height: 350px">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th> </th>
                                    <th>Image</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Update Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (AboutUs about in Model)
                                {
                                    <tr>
                                        <td>
                                            <a asp-action="detail" asp-controller="aboutus" asp-route-id="@about.Id" class="btn btn-info"><i style="margin:0px" class="mdi mdi-eye"></i></a>
                                        </td>
                                        <td>
                                            <img style="width:250px; height:250px" src="~/uploads/aboutus/@about.ImageName" class="img-fluid" alt="">
                                        </td>
                                        <td>@about.Title</td>
                                        <td>
                                            @if (about.Description.Length > 25)
                                            {
                                                @about.Description.Substring(0,25)<p>.....</p>
                                            }
                                            else
                                            {
                                                @about.Description 
                                            }
                                        </td>
                                        <td>@String.Format("{0:d/M/yyyy HH:mm:ss}", about.UpdatedDate).Replace(" ","-")</td>
                                        <td>
                                            <a asp-action="update" asp-controller="aboutus" asp-route-id="@about.Id" class="btn btn-outline-primary">Update</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>