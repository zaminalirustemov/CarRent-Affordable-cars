@model Testimonial
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Testimonial Detail </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">Testimonial</li>
                <li class="breadcrumb-item active" aria-current="page">Detail</li>
            </ol>
        </nav>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="item">
                <div class="testimony-wrap rounded text-center py-4 pb-5">
                    <div class="row">
                        <div class="user-img mb-2 col-sm-6">
                            @if (Model.AppUser.ImageName is null)
                            {
                                <img src="~/assets/images/memperphoto.jpg" alt="Avatar" class="img-fluid my-5 " style="widht:300px" />
                            }
                            else
                            {
                                <img src="~/uploads/user/@Model.AppUser.ImageName" alt="Avatar" class="img-fluid my-5 " style="widht:300px"  />
                            }
                        </div>
                        <div class="text pt-4 col-sm-6">
                            <p class="mb-4"><b>Quote:</b><br />@Model.Quote</p>
                            <p class="name"><b>Fullname:</b><br />@Model.AppUser.Fullname</p>
                            <span class="position"><b>UserName:</b><br />@Model.AppUser.UserName</span>
                                <div class="form-group">
                                    <p class="name"><b>Status:</b></p>
                                    <div style="text-align-last: center">

                                        <div class="dropdown">
                                            <button class="btn btn-@(Model.isActive==null? "warning" :
                                                    (Model.isActive==true? "success" : "danger")) dropdown-toggle" type="button" id="dropdownMenuOutlineButton2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                @(Model.isActive == null ? "New" : (Model.isActive == true ? "Active" : "Passive"))
                                            </button>
                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuOutlineButton2" style="">

                                                @if (Model.isActive != null)
                                                {
                                                    <a class="dropdown-item btn btn-warning" asp-action="new" asp-controller="testimonial" asp-route-id="@Model.Id">New</a>
                                                    <div class="dropdown-divider"></div>
                                                }
                                                @if (Model.isActive != true)
                                                {
                                                    <a class="dropdown-item btn btn-success" asp-action="active" asp-controller="testimonial" asp-route-id="@Model.Id">Active</a>
                                                    <div class="dropdown-divider"></div>
                                                }
                                                @if (Model.isActive != false)
                                                {
                                                    <a class="dropdown-item btn btn-danger" asp-action="passive" asp-controller="testimonial" asp-route-id="@Model.Id">Passive</a>
                                                   
                                                }

                                            </div>
                                        </div>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>
