@model PaginatedList<Testimonial>
@{
    int count = (Model.ActivePage - 1) * 5;
}

    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">New Testimonial Table </h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">Testimonial</li>
                    <li class="breadcrumb-item">New Testimonial</li>
                    <li class="breadcrumb-item active" aria-current="page">Table</li>
                </ol>
            </nav>
        </div>
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>№</th>
                                        <th>ID</th>
                                        <th>Image</th>
                                        <th>Username</th>
                                        <th>Fullname</th>
                                        <th>Quote</th>
                                        <th>Sended Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (Testimonial testimonial in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@testimonial.Id</td>
                                        <td>
                                            @if (testimonial.AppUser.ImageName is null)
                                            {
                                                <img src="~/assets/images/memperphoto.jpg" alt="Avatar" style="width: 80px; height:80px" />
                                            }
                                            else
                                            {
                                                <img src="~/uploads/user/@testimonial.AppUser.ImageName" alt="Avatar" style="width: 80px; height:80px" />
                                            }
                                        </td>
                                        <td>@testimonial.AppUser.UserName</td>
                                        <td>@testimonial.AppUser.Fullname</td>
                                        <td>

                                            @if (testimonial.Quote.Length > 25)
                                            {
                                                @testimonial.Quote.Substring(0,25)

                                                <p>.....</p>
                                            }
                                            else
                                            {
                                                @testimonial.Quote
                                            }
                                        </td>
                                        <td>@String.Format("{0:d/M/yyyy HH:mm:ss}", testimonial.SendedDate).Replace(" ","-")</td>
                                        <td>
                                            <a class="btn btn-outline-info" asp-action="detail" asp-controller="testimonial" asp-route-id="@testimonial.Id">Detail</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            @if (Model.PreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="index" asp-route-page="@(Model.ActivePage-1)">&laquo;</a>
                </li>
            }
            @for (int i = 1; i <= Model.TotalPageCount; i++)
            {
                <li class="page-item @(Model.ActivePage==i? "active" :"")"><a class="page-link" asp-action="index" asp-route-page="@i">@i</a></li>
            }
            @if (Model.NextPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="index" asp-route-page="@(Model.ActivePage+1)">&raquo;</a>
                </li>
            }
        </ul>
    </nav>
</div>
