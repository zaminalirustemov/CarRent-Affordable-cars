@model InfoBar
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Update InfoBar</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">InfoBar</li>
                <li class="breadcrumb-item">Table</li>
                <li class="breadcrumb-item active" aria-current="page">Update</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <form class="forms-sample" method="post">
                        <div class="form-group row">
                            <label asp-for="Key" class="col-sm-3 col-form-label">Key</label>
                            <div class="col-sm-9">
                                <input asp-for="Key" class="form-control" placeholder="Key">
                                <span asp-validation-for="Key" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Value" class="col-sm-3 col-form-label">Value</label>
                            <div class="col-sm-9">
                                <input asp-for="Value" class="form-control" placeholder="Value">
                                <span asp-validation-for="Value" class="text-danger"></span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-inverse-primary mr-2">Update</button>
                        <button asp-action="index" asp-controller="infobar" class="btn btn-dark">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>