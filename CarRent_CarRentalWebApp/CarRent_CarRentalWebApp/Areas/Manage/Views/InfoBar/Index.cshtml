@model List<InfoBar>
@{
    int count = 0;
}

    <div class="content-wrapper">
        <div class="page-header">
        <h3 class="page-title"> Information Bar Table </h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                <li class="breadcrumb-item">Information Bar</li>
                    <li class="breadcrumb-item active" aria-current="page">Table</li>
                </ol>
            </nav>
        </div>
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th> </th>
                                        <th>№</th>
                                        <th>Key</th>
                                        <th>Value</th>
                                        <th>Updated Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (InfoBar info in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>
                                            <a asp-action="detail" asp-controller="infobar" asp-route-id="@info.Id" class="btn btn-info"><i style="margin:0px" class="mdi mdi-eye"></i></a>
                                        </td>
                                        <td>@count</td>
                                        <td>@info.Key</td>
                                        <td>@info.Value</td>
                                        <td>@String.Format("{0:d/M/yyyy HH:mm:ss}", info.UpdatedDate).Replace(" ","-")</td>
                                        <td>
                                            <a class="btn btn-outline-primary" asp-action="update" asp-controller="infobar" asp-route-id="@info.Id">Update</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
